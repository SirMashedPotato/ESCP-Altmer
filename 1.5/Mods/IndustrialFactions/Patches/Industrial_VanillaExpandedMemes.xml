					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>Defs/FactionDef[@Name="ESCP_Industrial_AltmerNonPlayerFaction_CivilBase" or @Name="ESCP_Industrial_AltmerNonPlayerFaction_Base"]/requiredMemes</xpath>
